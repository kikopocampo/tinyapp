<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
          <%if (!user) {%>
            <form class="form-inline" method = "GET" action="/register" >
              <button type="submit" class="btn btn-primary bg-light" style="color:black; margin: 5px; position:absolute; right:80px;border-color: black;">Register</button> 
            </form>
            <form class="form-inline" method = "GET" action="/login" >
              <button type="submit" class="btn btn-primary bg-light" style="color:black; margin: 5px; position:absolute; right:0px ;border-color: black; " autofocus>Login</button> 
            </form>
          <% } else { %>
            <form class="form-inline" method = "POST" action="/logout" >
              <p style="position:fixed; right: 100px ; text-align: right; margin: 5px; font-size: 18px; color: white;">Welcome back, <%= (user.email).split('@')[0] %></p>
              <button type="submit" class="btn btn-primary" style="margin: 5px; position:absolute; right:0px; background-color:slategray ;border-color: black;">Logout</button> 
            </form>
          <% } %>
          
      </div>
    </div>
  </nav>
</header>